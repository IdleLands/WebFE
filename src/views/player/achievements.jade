script(id="player-achievements",type="text/ng-template")
    md-list.flex-scroll.wrap-container.has-height(layout="row")
        md-item.md-whiteframe-z1(ng-repeat="achievement in player.achievements",flex="25")
            md-item-content
                div.md-tile-left.text-center
                    span.fa-stack
                        span.fa.fa-stack-2x(ng-repeat="item in ::$parent.achievementTypeToIcon[achievement.type]",class="{{::item}}")
                div.md-tile-content
                    h3
                        span {{::achievement.name}}
                        span.fa.fa-fw.fa-tag(style="float:right",ng-if="achievement.title")
                            md-tooltip {{::achievement.title}}
                    h4 {{::achievement.desc}}
                    p {{::achievement.reward}}