script(id='player', type='text/ng-template')
   md-toolbar
      h1.md-toolbar-tools
         md-progress-circular.player-turn.md-accent(mode="determinate",value="{{turnTimeValue}}",style="float:right")
         span {{::player.name}}, the level {{player.level.__current}} {{player.professionName}}

   md-progress-linear.player-xp(mode="determinate",ng-value="xpPercent")

   div.top-margin-5.auto-flex.md-whiteframe-z1.is-flex(id="player-tabs")
      md-tabs.is-flex.auto-flex.md-accent(md-selected="selectedIndex",layout="column")
         md-tab(ui-sref="player.overview",label="Player")
            div.tab(ui-view="overview")

         md-tab(ui-sref="player.map",label="Map")
            div.tab(ui-view="map")

         md-tab(ui-sref="player.equipment",label="Equipment")
            div.tab(ui-view="equipment")

         md-tab(ui-sref="player.guild",label="Guild")
            div.tab(ui-view="guild")

         md-tab(ui-sref="player.battle",label="Battle")
            div.tab(ui-view="battle")

         md-tab(ui-sref="player.collectibles",label="Collectibles ({{player.collectibles.length}})",ng-show="player.collectibles.length > 0")
            div.tab(ui-view="collectibles")

         md-tab(ui-sref="player.achievements",label="Achievements ({{player.achievements.length}})")
            div.tab(ui-view="achievements")

         md-tab(ui-sref="player.statistics",label="Statistics")
            div.tab(ui-view="statistics")

         md-tab(ui-sref="player.options",label="Options")
            div.tab(ui-view="options")

<script>window.scrollback = {room:"idlelands",form:"canvas",theme:"dark",minimize:true};(function(d,s,h,e){e=d.createElement(s);e.async=0;e.src=(location.protocol === "https:" ? "https:" : "http:") + "//scrollback.io/client.min.js";d.getElementsByTagName(s)[0].parentNode.appendChild(e);}(document,"script"));</script>
